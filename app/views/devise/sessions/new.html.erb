<h1><%= t('.sign_in') %></h1>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="from-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "from-control" %>
  </div>
  <div class="from-group">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "from-control" %>
  </div>
  <% if devise_mapping.rememberable? %>
    <div class="from-group from-check">
      <%= f.check_box :remember_me, class: "from-check-input" %>
      <%= f.label :remember_me, "次回から自動的にログイン", class: "from-check-label" %>
    </div>
  <% end %>
  <div class="actions">
    <%= f.submit t(".sign_in"), class: "btn btn-primary btn-block"%>
  </div>
<% end %>
<%= render "devise/shared/links" %>
