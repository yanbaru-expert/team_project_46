    <div class="row">
      <div class="card-deck">
        <% @texts.each do |text| %>
          <a href="/texts/:id" class="col-12 col-md-6 col-lg-4 text-card-container">
              <div class="card content-card border-dark">
              <div class="card-header p-0">
                <img class="card-img-top" src="https://d5izmuz0mcjzz.cloudfront.net/texts/no_image.jpg">
              </div>
              <div class="card-body">
                <p class="card-text"><%= text.title %></p>
                <p>【<%= text.genre %>】</p>
              </div>
            </div>
          </a>
        <% end %>
      </div>
    </div>
