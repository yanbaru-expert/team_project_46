<div class="contents-title text-center">
  <h3>Ruby/Rails テキスト教材</h3>
</div>
<div class="row">
  <div class="card-deck justify-content-center">
    <% @texts.each do |text| %>
      <%= link_to("/texts/#{text.id}") do %>
        <i class="col-12 col-md-6 col-lg-4 text-card-container"></i>
        <div class="card content-card border-dark">
          <div class="card-header p-0">
            <img class="card-img-top" src="https://d5izmuz0mcjzz.cloudfront.net/texts/no_image.jpg">
          </div>
          <div class="card-body">
            <p class="card-text"><%= text.title %></p>
            <p>【<%= text.genre %>】</p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
